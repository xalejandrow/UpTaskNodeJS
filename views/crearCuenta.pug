doctype html
html(lang="en")
    head
       include partials/header
    body.login 
        .contenedor-formulario 
            h1 Crear tu cuenta en UpTask 

            if locals.mensajes 
                .alertas 
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria] 
                            .alerta(class=`${categoria}`)
                                p= error

                //- each error in errores 
                //-     p.error.alerta= error.message

            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo 
                    label(for="email") E-mail: 
                    input(type="email", name="email" placeholder="Tu Email" ) 
                    //- input(type="email", name="email" placeholder="Tu Email" required) 
                .campo 
                    label(for="password") Password: 
                    input(type="password", name="password" placeholder="Tu Password" ) 
                    //- input(type="password", name="password" placeholder="Tu Password" required) 
                .campo.enviar 
                    input.boton(type="submit" value="Crear Cuenta")
                .campo 
                    a(href="/iniciar-sesion") Volver a Iniciar Sesi√≥n
        script(src="/dist/bundle.js")
